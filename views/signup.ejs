<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Page</title>
  </head>
  <style>
    * {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
        sans-serif;
      box-sizing: border-box;
    }
    .form-control {
      display: block;
      width: 400px;
      margin-bottom: 10px;
    }

    #signup-status {
      opacity: 0;
    }

    /* navigation */
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }

    li {
      float: left;
    }

    li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    li a:hover:not(.active) {
      background-color: #111;
    }

    .active {
      background-color: #04aa6d;
    }
  </style>
  <body>
    <%- include('./partial/navigation.ejs') %>
    <h3>Signup Form</h3>
    <form id="signup-form">
      <input
        type="text"
        id="username"
        placeholder="username"
        value="erfan"
        class="form-control"
      />
      <input
        type="text"
        id="password"
        placeholder="password"
        value="user1234"
        class="form-control"
      />
      <input
        type="text"
        id="email"
        placeholder="email"
        value="erfan@jmail.com"
        class="form-control"
      />
      <input
        type="text"
        id="gender"
        placeholder="gender"
        value="male"
        class="form-control"
      />

      <button type="submit" class="form-control">Signup</button>
    </form>

    <p id="signup-status">DEFAULT STATUS</p>

    <script src="/javascripts/signup.js"></script>
  </body>
</html>
